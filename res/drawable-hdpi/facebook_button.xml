<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_bar_closed" />
            <corners android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/com_facebook_button_background_color_disabled" />
            <corners android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/com_facebook_button_background_color_pressed" />
            <corners android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/com_facebook_button_background_color" />
            <corners android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>