<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_secondary"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:minHeight="90dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Nimi"
                android:textColor="@color/color_text_light"
                android:textSize="22sp"/>
            <LinearLayout
                android:id="@+id/timeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.7"
                    android:padding="3dp"
                    android:text="@string/icon_clock"
                    app:iconColor="@color/color_text_light_secondary"
                    app:iconFont="@string/icon_light"
                    app:iconSize="12sp" />
                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aika"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/placeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeContent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.8"
                    android:padding="4dp"
                    android:text="@string/icon_marker"
                    app:iconColor="@color/color_marker"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="15sp" />
                <TextView
                    android:id="@+id/event_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paikka"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/open_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeContent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/underline"
                android:text="N채yt채 kartalla"
                android:textColor="@color/color_link"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/priceContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_map_text"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.8"
                    android:padding="2dp"
                    android:text="@string/icon_money"
                    app:iconColor="@color/color_money"
                    app:iconFont="@string/icon_light"
                    app:iconSize="12sp" />
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P채채symaksu"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceContent"
                android:layout_marginTop="5dp"
                android:text="Esittelyteksti"
                android:textColor="@color/color_text_light"
                android:textStyle="italic"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/joinButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/plus_icon" />
                <TextView
                    android:id="@+id/participate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/no_votes"
                    android:textColor="@color/color_text_light"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/report_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/icon_dots"
            app:iconFont="@string/icon_solid"
            app:iconSize="12sp" />

        <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/edit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/selector"
            android:padding="8dp"
            android:text="@string/icon_edit"
            app:iconFont="@string/icon_solid"
            app:iconSize="14sp" />

        <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/remove_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/selector"
            android:padding="8dp"
            android:text="@string/icon_remove"
            app:iconFont="@string/icon_solid"
            app:iconSize="14sp" />
    </LinearLayout>
</LinearLayout>