<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_back"
        layout="@layout/menu_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_secondary"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/barType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Yökerho"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_shape"/>
                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_map"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />

                    <com.ardeapps.menomesta.views.IconView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/map_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/color_menu"
                        android:padding="5dp"
                        android:text="@string/icon_map"
                        app:iconFont="@string/icon_light"
                        app:iconSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/foodContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/food_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bar_details_food"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/food_icon" />
                </LinearLayout>
                <TextView
                    android:id="@+id/ageTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/bar_details_age"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/ageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_age_pe"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/ageFridayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_no_added"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_shape"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_age_la"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/ageSaturdayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:text="Ei lisätty"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/entranceTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_entrance"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entranceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_no_added"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entranceDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="(1.10.2017)"
                        android:textColor="@color/color_text_hint"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp">
                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_trophy"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="14sp"
                        app:iconColor="@color/color_star"/>
                    <TextView
                        android:id="@+id/positionAllTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="2. suosituin menomesta"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_statistics"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/ratingContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.7"
                            android:textColor="@color/color_text_light"
                            android:textSize="16sp" />

                        <com.ardeapps.menomesta.views.IconView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/icon_star"
                            app:iconColor="@color/color_star"
                            app:iconFont="@string/icon_solid"
                            app:iconSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/averageAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Keski-ikä 24v"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />
                    <com.ardeapps.menomesta.views.GenderBars
                        android:id="@+id/genderBars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_prices"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/listHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="@string/prices_name"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_size"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_price"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:padding="10dp"
                android:text="@string/bar_details_no_added_drinks"
                android:textColor="@color/color_text_light" />
            <LinearLayout
                android:id="@+id/drinksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/reviewsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_reviews"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/reviewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/editBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_edit"
            android:textColor="@color/color_text_light">
        </Button>
        <Button
            android:id="@+id/addReview"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_rate"
            android:textColor="@color/color_text_light">
        </Button>
    </LinearLayout>
</RelativeLayout>