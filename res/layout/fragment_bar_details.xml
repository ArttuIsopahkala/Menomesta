<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_back"
        layout="@layout/menu_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/barType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Yökerho"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_shape"/>
                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_map"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />

                <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/map_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/color_menu"
                    android:padding="5dp"
                    android:text="@string/icon_map"
                    app:iconFont="@string/icon_light"
                    app:iconSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/foodContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/food_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_secondary"
                    android:gravity="center"
                    android:text="@string/bar_details_food"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/food_icon" />
            </LinearLayout>
            <TextView
                android:id="@+id/ageTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:text="@string/bar_details_age"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/ageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_age_pe"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/ageFridayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_no_added"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_age_la"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/ageSaturdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:text="Ei lisätty"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/entranceTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_entrance"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/entranceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_no_added"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/entranceDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="(1.10.2017)"
                    android:textColor="@color/color_text_hint"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/positionAllTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Kaupungin 2. suosituin yökerho"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_statistics"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/ratingContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />

                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/icon_star"
                        app:iconColor="@color/color_star"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="12sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/averageAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Keski-ikä 24v"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/sexContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/icon_user"
                        app:iconColor="@color/color_female"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="22sp" />
                    <TextView
                        android:id="@+id/femalePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="70%"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/sexLayout"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                    </LinearLayout>
                    <TextView
                        android:id="@+id/malePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="70%"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />

                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/icon_user"
                        app:iconColor="@color/color_male"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="22sp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_prices"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/listHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="@string/prices_name"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_size"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_price"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:padding="10dp"
                android:text="@string/bar_details_no_added_drinks"
                android:textColor="@color/color_text_light" />
            <LinearLayout
                android:id="@+id/drinkListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/commentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_comment"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/commentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.33"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_edit"
            android:textColor="@color/color_text_light">
        </Button>
        <Button
            android:id="@+id/addRating"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.33"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_rate_bar"
            android:textColor="@color/color_text_light">
        </Button>
        <Button
            android:id="@+id/addComment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.33"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_comment_bar"
            android:textColor="@color/color_text_light">
        </Button>
    </LinearLayout>
    <ImageView
        android:id="@+id/loader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/loader_ic"
        android:visibility="invisible"/>
</RelativeLayout>