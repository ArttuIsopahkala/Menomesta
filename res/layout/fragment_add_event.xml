<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_back"
        layout="@layout/menu_back" />
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_button"
        android:text="@string/ready"
        android:textColor="@color/color_text_light" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submitButton"
        android:layout_below="@+id/menu_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/nameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">
                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/events_add_name"
                    android:inputType="textCapSentences"
                    android:maxLength="100"
                    android:textColor="@color/color_text_light_secondary"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/timeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_add_time"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_secondary"
                    android:orientation="horizontal">

                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:padding="10dp"
                        android:text="@string/icon_clock"
                        app:iconColor="@color/color_text_light_secondary"
                        app:iconFont="@string/icon_light"
                        app:iconSize="18sp" />
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/selector"
                        android:gravity="center"
                        android:text="30. toukokuuta"
                        android:textColor="@color/color_text_light_secondary"
                        android:textColorHint="@color/color_text_hint"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/selector"
                        android:gravity="center"
                        android:text="12:00"
                        android:textColor="@color/color_text_light_secondary"
                        android:textColorHint="@color/color_text_hint"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addressContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_add_place"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_secondary"
                    android:orientation="horizontal">

                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:padding="10dp"
                        android:text="@string/icon_marker"
                        app:iconColor="@color/color_marker"
                        app:iconFont="@string/icon_solid" />
                    <AutoCompleteTextView
                        android:id="@+id/addressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/events_add_place_placeholder"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:popupBackground="@color/color_menu"
                        android:textColor="@color/color_text_light_secondary"
                        android:textColorHint="@color/color_text_hint" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/priceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_price"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_secondary"
                android:orientation="horizontal">

                <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:padding="10dp"
                    android:text="@string/icon_money"
                    app:iconFont="@string/icon_light" />
                    <EditText
                        android:id="@+id/priceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/events_add_price_placeholder"
                        android:inputType="number"
                        android:textColor="@color/color_text_light_secondary"
                        android:textColorHint="@color/color_text_hint"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_secondary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_add_description"
                    android:textColor="@color/color_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/events_add_description_placeholder"
                    android:inputType="textCapSentences"
                    android:maxLength="250"
                    android:textColor="@color/color_text_light_secondary"
                    android:textColorHint="@color/color_text_hint"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>