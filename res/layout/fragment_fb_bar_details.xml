<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_back"
        layout="@layout/menu_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_secondary"
                android:padding="10dp">
                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Esittely"
                    android:textColor="@color/color_text_light"
                    android:textSize="13sp"
                    android:textStyle="italic"/>
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/color_star"
                    android:secondaryProgressTint="@android:color/transparent"
                    android:stepSize="0.1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/barType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Yökerho"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_shape"/>
                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_map"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <com.ardeapps.menomesta.views.IconView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/map_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/color_menu"
                        android:padding="5dp"
                        android:text="@string/icon_map"
                        app:iconFont="@string/icon_light"
                        app:iconSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/openContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/openText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_closed_now"
                        android:textColor="@color/color_bar_closed"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/openTimeTodayContent"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_shape"/>
                        <TextView
                            android:id="@+id/openTimeTodayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/bar_details_open"
                            android:textColor="@color/color_text_light"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_shape"/>
                    <com.ardeapps.menomesta.views.IconView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/openTimesIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_menu"
                        android:padding="5dp"
                        android:text="@string/icon_list"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceContent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/bar_details_price_range"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/bar_details_cheap"
                            android:textColor="@color/color_text_light"
                            android:textSize="16sp" />
                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/priceBar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/bar_details_expensive"
                            android:textColor="@color/color_text_light"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/foodContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/food_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bar_details_food"
                        android:textColor="@color/color_text_light"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/food_icon" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp">
                    <com.ardeapps.menomesta.views.IconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_trophy"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        app:iconFont="@string/icon_solid"
                        app:iconSize="14sp"
                        app:iconColor="@color/color_star"/>
                    <TextView
                        android:id="@+id/positionAllTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="2. suosituin menomesta"
                        android:textColor="@color/color_text_light"
                        android:textSize="16sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/bar_details_statistics"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/averageAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Keski-ikä 24v"
                    android:textColor="@color/color_text_light"
                    android:textSize="14sp" />
                <com.ardeapps.menomesta.views.GenderBars
                    android:id="@+id/genderBars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/eventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_events"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/eventsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showAllEventsContent"
                android:background="@color/color_button"
                android:gravity="center"
                android:padding="5dp">
                <TextView
                    android:id="@+id/showAllEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bar_details_events_show_all"
                    android:textColor="@color/color_text_light">
                </TextView>
                <com.ardeapps.menomesta.views.IconView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/icon_arrow_down"
                    app:iconFont="@string/icon_solid"
                    app:iconSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_prices"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/listHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="@string/prices_name"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_size"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/prices_price"
                    android:textColor="@color/color_text_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:padding="10dp"
                android:text="@string/bar_details_no_added_drinks"
                android:textColor="@color/color_text_light" />
            <LinearLayout
                android:id="@+id/drinksList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/reviewsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bar_details_reviews"
                android:textColor="@color/color_text_light"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/reviewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/editBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.33"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_edit_drinks"
            android:textColor="@color/color_text_light">
        </Button>
        <Button
            android:id="@+id/addReview"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.33"
            android:background="@color/color_button"
            android:gravity="center"
            android:text="@string/bar_details_rate"
            android:textColor="@color/color_text_light">
        </Button>
    </LinearLayout>
</RelativeLayout>